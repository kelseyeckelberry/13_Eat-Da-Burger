<section class="container">
    <div class="row">
        <div class="col">
            <h1 class="header">Eat-Da-Burger!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devour=true}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devour=false}}
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <form class="create-form">

        <div class="form-group">
            <input type="text" id="ca" name="name">
        </div>

        <button type="button" class="btn-dark">Submit</button>
        </form>

    </div>
</section>


